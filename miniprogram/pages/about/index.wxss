.about-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.main {
  width: 100%;
  margin: 0 auto 64rpx;
  padding: 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
}

.authors {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  color: #898B95;
  font-size: 26rpx;
  margin: 48rpx auto 96rpx;
}

.authors .author {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-self: center;
  margin: 4rpx 0;
}

.author .avatar {
  display: block;
  margin: 0 auto 12rpx;
  height: 140rpx;
  width: 140rpx;
}

.author .title {
  color: #898B95;
  font-weight: 400;
  text-align: center;
}

.author .name {
  color: #27282B;
  font-weight: 500;
  text-align: center;
}

.desc {
  margin: 24rpx 16rpx;
  font-size: 32rpx;
  font-weight: 400;
  color:#27282B;
  line-height: 48rpx;
}

.btn-feedback {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 80rpx auto 0;
  width: 622rpx !important;
  height: 96rpx;
  background: rgba(72,131,244,1);
  box-shadow: 0 4rpx 8rpx 0 rgba(191,192,197,1);
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
}

.footer {
  text-align: center;
}

.copyright {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 32rpx;
  color:#27282B;
  font-size: 26rpx;
}

.search-result-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 96rpx;
  min-height: 100vh;
}

.nothing-found {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-top: 120rpx;
}

.nothing-found image {
  margin: 48rpx auto;
  height: 240rpx;
  width: 240rpx;
}

.nothing-found .desc {
  color: #949A9E;
  font-size: 28rpx;
}

.search-result {
  width: 100%;
}

.toc {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 0;
  width: 100%;
}

.toc .toc-item {
  display: flex;
  align-items: center;
  height: 160rpx;
  width: 100%;
  background-color: #fff;
  box-shadow: 0 -2rpx 0 0 rgba(255,255,255,1);
}

.toc-item:nth-child(2n) {
  background-color: #F8FAFC;
}

.toc-item .counter {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 64rpx;
  width: 64rpx;
  border-radius: 50%;
  margin: 0 32rpx;
  background-color: rgb(35, 107, 244, .1);
  color: #236BF4;
  font-size: 40;
  font-weight: 600;
}

.toc-item .wrapper {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  flex-grow: 2;
}

.toc-item .wrapper .title {
  color: #27282B;
  font-size: 36rpx;
}

.toc-item .wrapper .author {
  margin-top: 8rpx;
  color: #BFC0C5;
  font-size: 28rpx;
}

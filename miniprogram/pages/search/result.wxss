.search-result-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 96rpx;
  min-height: 100vh;
}

.nothing-found {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-top: 120rpx;
}

.nothing-found image {
  margin: 48rpx auto;
  height: 240rpx;
  width: 240rpx;
}

.nothing-found .desc {
  color: #949A9E;
  font-size: 28rpx;
}

.search-result {
  width: 100%;
}

.search-result .toc {
  margin-top: 0;
}

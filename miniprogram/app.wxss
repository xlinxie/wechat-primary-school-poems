/**app.wxss**/
page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background: #fafafa;
}

view {
  box-sizing: border-box;
}

button {
  background: initial;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

button:not([size='mini']) {
  margin-left: unset;
  margin-right: unset;
}

.pag-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border: none;
  outline: none;
  padding: 0;
}

.about-link {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 32rpx auto;
  height: 40rpx;
  color: #898B95;
  font-size: 28rpx;
}

.icon-faq {
  display: inline-flex;
  align-items: center;
  width: 32rpx;
  height: 32rpx;
  margin-right: 6rpx;
}

.searchbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  height: 96rpx;
  width: 100%;
  background: #fff;
  box-shadow: 0 2rpx 0 0 #F4F4F4;
}

.searchbar .btn-link {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin-left: auto;
  width: 128rpx;
  max-width: 128rpx;
  padding: 0;
  border-radius: 0;
  color: #236BF4;
  font-size: 32rpx;
  font-weight: 400;
}

.searchbar .btn-link--hover {
  background: #fff;
  font-weight: 500;
}

.searchbar .inline-form-field {
  position: relative;
  display: inline-flex;
  align-items: center;
  height: 64rpx;
  min-width: 590rpx;
  border-radius: 32rpx;
  background: #FAFAFA;
  font-size: 28rpx;
}

/* flex-grow 不起效 ╮(╯▽╰)╭ */
.inline-form-field:only-child {
  width: 686rpx;
}

.searchbar .icon-search {
  position: absolute;
  left: 16rpx;
  display: inline-flex;
  width: 50rpx;
  height: 50rpx;
  top: 50%;
  transform: translateY(-50%);
}

.searchbar .inline-form-field input {
  width: 100%;
  padding-left: 80rpx;
}

.searchbar .placeholder {
  color:#BFC0C5;
  text-align: center;
}

.searchbar .inline-form-field .fake-input {
  width: 100%;
  padding-left: 80rpx;
  color:#BFC0C5;
  text-align: center;
}

/* 诗词目录 */
.toc {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 96rpx;
  margin-bottom: 128rpx;
  width: 100%;
}

.toc .toc-item {
  display: flex;
  align-items: center;
  height: 160rpx;
  width: 100%;
  background-color: #fff;
  box-shadow: 0 -2rpx 0 0 #fafafa;
}

.toc-item .counter {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 64rpx;
  width: 64rpx;
  border-radius: 50%;
  /* border: 4rpx solid #BFC0C5;
  border-bottom: 4rpx solid rgba(72,131,244,1); */
  margin: 0 32rpx;
  /* background: url('https://s1.ax1x.com/2020/04/15/Ji6Yfx.png') no-repeat 0 0 / contain; */
  color: #0C2F72;
  font-size: 36rpx;
  font-weight: 600;
}

.toc-item .wrapper {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  flex-grow: 2;
}

.toc-item .wrapper .title {
  color: #27282B;
  font-size: 36rpx;
}

.toc-item .wrapper .author {
  margin-top: 8rpx;
  color: #BFC0C5;
  font-size: 28rpx;
}


/* 年级诗词内容页面 */
.poems-content-container {
  padding: 0 32rpx 176rpx;
}

.poem-header {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 78rpx;
  color: #27282B;
}

.poem-header .title {
  color: #27282B;
  font-size: 56rpx;
  font-weight: 400;
}

.poem-header .author {
  margin-top: 16rpx;
  font-size: 32rpx;
}

.lines {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 112rpx;
  margin-bottom: 132rpx;
}

.lines .line {
  display: flex;
  align-items: center;
  margin: 16rpx 0;
}

.line .wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  width: 80rpx;
}

.line .wrapper:not(:last-child) {
  margin-right: 12rpx;
}

.line .wrapper .pinyin {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  height: 40rpx;
  line-height:40px;
  color: #949a9e;
  font-size: 30rpx;
  font-family: miui,system-ui,serif;
}

.line .wrapper .character {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(228,229,231,1);
  height: 76rpx;
  min-height: 78rpx;
  width: 76rpx;
  line-height: 66rpx;
  color: #27282B;
  font-size: 48rpx;
  background: linear-gradient(90deg, #E4E5E7, #E4E5E7 75%, transparent 75%, transparent 100%) repeat-x 0 center / 20rpx 2rpx,
  linear-gradient(#E4E5E7, #E4E5E7 75%, transparent 75%, transparent 100%) repeat-y center 0 / 2rpx 20rpx;
}

.annotations-panel {
  display: flex;
  margin-bottom: 32rpx;
  width: 100%;
}

.annotations-panel .header {
  position: relative;
  display: flex;
  align-items: center;
  height: 80rpx;
  background: #fff;
  border-radius: 8rpx;
  font-weight: bold;
}

.annotations-panel .annotations {
  padding: 16rpx;
  line-height: 50rpx;
  font-size: 32rpx;
}

.annotations .annotation {
  margin: 16rpx;
}

.translation-panel {
  display: flex;
  width: 100%;
}

.translation-panel .translations {
  padding: 16rpx;
  line-height: 50rpx;
  font-size: 32rpx;
}

.translations .translation {
  margin: 16rpx;
}

.poems-content-container .footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding-top: 22rpx;
  height: 124rpx;
  background: #fff;
  box-shadow: 0 -2rpx 2rpx 0 rgba(244,244,245,1);
  font-size: 32rpx;
  font-weight: 500;
}

.controls {
  display: flex;
  align-items: center;
  z-index: 999;
}

.controls .toggle {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 44rpx;
  line-height: 28rpx;
  color: #4883F4;
  font-size: 20rpx;
  font-weight: 500;
}

.controls .toggle.disable {
  /* color: #949a9e; */
  filter: grayscale(80%);
}

.controls .icon {
  height: 56rpx;
  width: 56rpx;
}

.btn-share {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin: 0 32rpx !important;
  width: 400rpx;
  height: 80rpx;
  background: rgba(72,131,244,1);
  border-radius: 40rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
}

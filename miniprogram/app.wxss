/**app.wxss**/
page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background: #fafafa;
}

button {
  background: initial;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

.pag-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

view {
  box-sizing: border-box;
}


.searchbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  height: 96rpx;
  width: 100%;
  background: #fff;
  box-shadow: 0 2rpx 0 0 #F4F4F4;
}

.searchbar .btn-link {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin-left: auto;
  width: 128rpx;
  max-width: 128rpx;
  padding: 0;
  border-radius: 0;
  color: #236BF4;
  font-size: 32rpx;
  font-weight: 400;
}

.searchbar .btn-link--hover {
  background: #fff;
  font-weight: 500;
}

.searchbar .inline-form-field {
  position: relative;
  display: inline-flex;
  align-items: center;
  height: 64rpx;
  min-width: 590rpx;
  border-radius: 32rpx;
  background: #FAFAFA;
  font-size: 28rpx;
}

/* flex-grow 不起效 ╮(╯▽╰)╭ */
.inline-form-field:only-child {
  width: 686rpx;
}

.searchbar .icon-search {
  position: absolute;
  left: 16rpx;
  display: inline-flex;
  width: 50rpx;
  height: 50rpx;
  top: 50%;
  transform: translateY(-50%);
}

.searchbar .inline-form-field input {
  width: 100%;
  padding-left: 80rpx;
}

.searchbar .placeholder {
  color:#BFC0C5;
  text-align: center;
}


/* 年级诗词目录页面 */
.vol-switch {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  height: 96rpx;
  width: 100%;
  margin-bottom: 2rpx;
  background-color: #fff;
  border-bottom: 2rpx solid #F4F4F4;
}

.vol-switch .switch-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-basis: 50%;
  line-height: 48rpx;
  height: 100%;
  color: #BFC0C5;
  font-size: 34rpx;
  font-weight: 400;
}

.vol-switch .switch-item image {
  width: 160rpx;
  height: 64rpx;
}

.vol-switch .switch-item.selected {
  color: #27282B;
}

.toc {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 96rpx;
  margin-bottom: 128rpx;
  width: 100%;
}

.toc .toc-item {
  display: flex;
  align-items: center;
  height: 160rpx;
  width: 100%;
  background-color: #fff;
  box-shadow: 0 -2rpx 0 0 #fafafa;
}

.toc-item .counter {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 64rpx;
  width: 64rpx;
  border-radius: 50%;
  margin: 0 32rpx;
  background: url('https://s1.ax1x.com/2020/04/15/Ji6Yfx.png') no-repeat 0 0 / contain;
  color: #0C2F72;
  font-size: 40;
  font-weight: 600;
}

.toc-item .wrapper {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  flex-grow: 2;
}

.toc-item .wrapper .title {
  color: #27282B;
  font-size: 36rpx;
}

.toc-item .wrapper .author {
  margin-top: 8rpx;
  color: #BFC0C5;
  font-size: 28rpx;
}
